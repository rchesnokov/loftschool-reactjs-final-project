{
  "compilerOptions": {
    "target": "esnext",
    "checkJs": false,
    "baseUrl": "src",
    "paths": {
      "api/*": ["api/*"],
      "components/*": ["components/*"],
      "modules/*": ["modules/**"],
      "routes/*": ["routes/**"],
      "sagas/*": ["sagas/**"],
      "types/*": ["types/**"],
      "utils/*": ["utils/**"]
    }
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*", "typings/index.d.ts"]
}
